 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <h2>User info</h2>
     <%= render "users/info" %>

     <h2 class="mt-3">New Book</h2>
     <%= render "users/form" %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
     <table class="table">
      <tbody>
        <tr>
          <td>
            <%= image_tag @user.get_profile_image(40,40) %>
          </td>
          <td>
            <%= link_to @user.name, user_path(current_user.id) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", @book, method: :delete, class:"btn btn-danger", data: { confirm: '本当に削除しますか？' } %>
          </td>
        </tr>
      </tbody>
    </table>
   </div>
  </div>
 </div>
