<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <p>
    <strong>Title</strong><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <strong>Opinion</strong><br>
    <%= f.text_area :body %>
