<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <form>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <br>
          <input type="title" class="form-control" id="inputTitle">
        </div>
        <div>
          <label for="inputOpinion">Opinion</label>
          <br>
          <label for="opinion" class="form-control" id:="inputOpinion">
        </div>
        <a href="book_path" class="btn btn-success btn-md" role="button" aria-pressed="true">Update Book</a>
      </form>
      <% end %>

      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>


